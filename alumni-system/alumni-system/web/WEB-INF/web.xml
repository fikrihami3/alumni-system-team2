<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Alumni</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.web.service.utility.filter.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AlumniController</servlet-name>
        <servlet-class>com.controllers.alumni.AlumniController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlumniController</servlet-name>
        <url-pattern>/AlumniController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReportingController</servlet-name>
        <servlet-class>com.controllers.reporting.ReportingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportingController</servlet-name>
        <url-pattern>/ReportingController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManageUserController</servlet-name>
        <servlet-class>com.controllers.user.ManageUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUserController</servlet-name>
        <url-pattern>/ManageUserController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Event</servlet-name>
        <servlet-class>com.models.event.Event</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>News</servlet-name>
        <servlet-class>com.models.event.News</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Charity</servlet-name>
        <servlet-class>com.models.event.Charity</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Donor</servlet-name>
        <servlet-class>com.models.event.Donor</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Participant</servlet-name>
        <servlet-class>com.models.event.Participant</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Sponsor</servlet-name>
        <servlet-class>com.models.event.Sponsor</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Event</servlet-name>
        <url-pattern>/Event</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>News</servlet-name>
        <url-pattern>/News</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Charity</servlet-name>
        <url-pattern>/Charity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Donor</servlet-name>
        <url-pattern>/Donor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Participant</servlet-name>
        <url-pattern>/Participant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sponsor</servlet-name>
        <url-pattern>/Sponsor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
</web-app>
